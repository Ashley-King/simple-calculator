<body>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1>calculator</h1>
        <div class="calculator-form">
          <form action="/" method="post">
          <div class="row">
            <div class="col">
              <input type="text" class="form-control" placeholder="First number" aria-label="First number" name="num1">
            </div>
            <div class="col">
              <input type="text" class="form-control" placeholder="Last number" aria-label="Last number" name="num2">
            </div>
            <div class="col-12 form-submit-row">
              <button type="submit" class="btn btn-primary">Calculate</button>
            </div>
          </div>
        </form>
        </div>
      </div>
    </div>
    
  </div>
